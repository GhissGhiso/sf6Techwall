{% extends "template.html.twig" %}

{% block body %}
<div class="row">
    {% for personne in personnes %}
        <div class="card mt-3 mx-3" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">{{ personne.name }}</h5>
                <h6 class="card-subtitle mb-2 text-body-secondary">{{ personne.firstname }} {{ personne.name }}</h6>
                <p class="card-text">Ã‚ge : {{ personne.age }} ans.</p>
                <a href="{{ path('personne.detail', {id: personne.id}) }}" class="card-link"><i class="fas fa-info-circle"></i></a>
                {# <a href="{{ path('personne.delete', {id: personne.id}) }}" class="card-link"><i class="fas fa-user-items"></i></a> #}
                <a href="{{ path('personne.delete', {id: personne.id}) }}" class="card-link"><i class="fa-solid fa-user-xmark"></i></a>
                <a href="{{ path('personne.edit', {id: personne.id}) }}" class="card-link"><i class="fas fa-user-edit"></i></a>
            </div>
        </div>        
    {% endfor %}
</div>
    {% if isPaginated is defined and isPaginated %}
        <div class="row mt-3">
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    {% if page != 1 %}
                        <li class="page-item"><a class="page-link" href="{{ path('personne.list.alls', {page: page - 1, nbre: nbre}) }}">Previous</a></li>                        
                    {% endif %}
                    {% for i in range(1, nbrePage) %}
                        <li class="page-item">
                            <a class="page-link" href="{{ path('personne.list.alls', {page: i, nbre: nbre}) }}">
                                {{ i }}
                            </a>
                        </li>                    
                    {% endfor %}
                    {% if page != nbrePage %}
                        <li class="page-item"><a class="page-link" href="{{ path('personne.list.alls', {page: page + 1, nbre: nbre}) }}">Next</a></li>                        
                    {% endif %}
                </ul>
            </nav>
        </div>
    {% endif %}
{% endblock %}

{% block title %}Liste des personnes{% endblock %}