{% extends "template.html.twig" %}

{% block body %}

    {% block PageTitle %} 
        <strong>Liste des todos :</strong>    
    {% endblock %}
    <ol class="list-group">
        {% for name,content in app.session.get('todos') %}
            <li class="list-group-item">
                {{ name }}
                :
                {{ content }}
            </li>
        {% endfor %}
    </ol>

{% endblock %}

{% block title %}
    Todo
{% endblock %}